@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>
<hr />

<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Sellers List</h2>
    </div>
    <div class="panel-body" style="padding: 0px">
        <table class="table table-striped table-hover" style="margin-bottom: 1px">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.BirthDate)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.BaseSalary)
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.BirthDate)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.BaseSalary)
                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <span> |</span>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <span> |</span>
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-heading" style="border-top-left-radius: 0px; border-top-right-radius: 0px">
        <h2 class="panel-title">Total: @Model.Count() Sellers</h2>
    </div>
</div>
