
@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple Search</legend>
                <div class="form-group">
                    <label for="fromDate" class="col-lg-2 control-label">From</label>
                    <div class="col-lg-10">
                        <input type="date" name="fromDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="untilDate" class="col-lg-2 control-label">Until</label>
                    <div class="col-lg-10">
                        <input type="date" name="untilDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-success">Search</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping Search</legend>
                <div class="form-group">
                    <label for="fromDate" class="col-lg-2 control-label">From</label>
                    <div class="col-lg-10">
                        <input type="date" name="fromDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="untilDate" class="col-lg-2 control-label">Until</label>
                    <div class="col-lg-10">
                        <input type="date" name="untilDate" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-success">Search</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
