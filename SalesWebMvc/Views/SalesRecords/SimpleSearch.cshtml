@model IEnumerable<SalesWebMvc.Models.SalesRecord>

@{
    ViewData["Title"] = "Simple Search";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="fromDate">From</label>
                    <input type="date" class="form-control" name="fromDate" value=@ViewData["fromDate"] />
                </div>

                <div class="form-group">
                    <label for="untilDate">Until</label>
                    <input type="date" class="form-control" name="untilDate" value=@ViewData["untilDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-default">Filter</button>
        </form>
    </div>
</nav>
<hr />

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title">Sales History</h2>
    </div>
    <div class="panel-body" style="padding: 0px">
        <table class="table table-striped table-hover" style="margin-bottom: 1px">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Seller)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Seller.Department)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Department.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-heading" style="border-top-left-radius: 0px; border-top-right-radius: 0px">
        <h2 class="panel-title">Total Sales: $@Model.Sum(obj => obj.Amount).ToString("F2")</h2>
    </div>
</div>
